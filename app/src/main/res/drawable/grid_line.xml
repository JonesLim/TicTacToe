<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Horizontal line -->
    <item
        android:top="10px"
        android:bottom="10px"
        android:left="10px"
        android:right="10px">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
        </shape>
    </item>

    <!-- Vertical line -->
    <item
        android:left="10px"
        android:right="10px"
        android:top="10px"
        android:bottom="10px">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
        </shape>
    </item>
</layer-list>